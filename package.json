{
  "name": "tui-markdown-vscode",
  "displayName": "Milkdown Markdown WYSIWYG",
  "description": "WYSIWYG Markdown editor using Milkdown",
  "version": "0.0.1",
  "publisher": "shun",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Milkdown Markdown",
      "properties": {
        "tuiMarkdown.fontSize": {
          "type": "number",
          "default": 16,
          "minimum": 8,
          "maximum": 32,
          "description": "Font size for the Markdown editor (in pixels)"
        }
      }
    },
    "customEditors": [
      {
        "viewType": "tuiMarkdown.editor",
        "displayName": "Milkdown Markdown Editor",
        "selector": [
          {
            "filenamePattern": "*.md"
          },
          {
            "filenamePattern": "*.markdown"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "build": "node esbuild.config.js",
    "watch": "node esbuild.config.js --watch",
    "lint": "tsc --noEmit",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@milkdown/crepe": "^7.18.0"
  }
}
