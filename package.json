{
  "name": "tui-milkdown-vscode",
  "displayName": "Milkdown Markdown WYSIWYG",
  "description": "A beautiful WYSIWYG Markdown editor powered by Milkdown Crepe. Edit markdown files with rich text experience and theme selection.",
  "version": "1.5.2",
  "publisher": "tuanhv",
  "license": "MIT",
  "icon": "media/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/hoangvantuan/tui-milkdown-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/hoangvantuan/tui-milkdown-vscode/issues"
  },
  "homepage": "https://github.com/hoangvantuan/tui-milkdown-vscode#readme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "markdown",
    "wysiwyg",
    "milkdown",
    "editor",
    "rich text",
    "preview"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Milkdown Markdown",
      "properties": {
        "tuiMarkdown.fontSize": {
          "type": "number",
          "default": 16,
          "minimum": 8,
          "maximum": 32,
          "description": "Font size for the Markdown editor (in pixels)"
        },
        "tuiMarkdown.headingSizes.h1": {
          "type": "number",
          "default": 32,
          "minimum": 12,
          "maximum": 72,
          "description": "Font size for H1 headings (in pixels)"
        },
        "tuiMarkdown.headingSizes.h2": {
          "type": "number",
          "default": 28,
          "minimum": 12,
          "maximum": 72,
          "description": "Font size for H2 headings (in pixels)"
        },
        "tuiMarkdown.headingSizes.h3": {
          "type": "number",
          "default": 24,
          "minimum": 12,
          "maximum": 72,
          "description": "Font size for H3 headings (in pixels)"
        },
        "tuiMarkdown.headingSizes.h4": {
          "type": "number",
          "default": 20,
          "minimum": 12,
          "maximum": 72,
          "description": "Font size for H4 headings (in pixels)"
        },
        "tuiMarkdown.headingSizes.h5": {
          "type": "number",
          "default": 18,
          "minimum": 12,
          "maximum": 72,
          "description": "Font size for H5 headings (in pixels)"
        },
        "tuiMarkdown.headingSizes.h6": {
          "type": "number",
          "default": 16,
          "minimum": 12,
          "maximum": 72,
          "description": "Font size for H6 headings (in pixels)"
        },
        "tuiMarkdown.highlightCurrentLine": {
          "type": "boolean",
          "default": true,
          "description": "Highlight the line containing the cursor in the editor"
        },
        "tuiMarkdown.imageSaveFolder": {
          "type": "string",
          "default": "images",
          "description": "Folder to save pasted images (relative to document). Use '.' for same folder as document."
        },
        "tuiMarkdown.autoRenameImages": {
          "type": "boolean",
          "default": true,
          "description": "Automatically rename image files when you change the image path in markdown (only when folder stays the same)"
        },
        "tuiMarkdown.autoDeleteImages": {
          "type": "boolean",
          "default": true,
          "description": "Automatically delete image files when removed from markdown (moves to trash)"
        }
      }
    },
    "customEditors": [
      {
        "viewType": "tuiMarkdown.editor",
        "displayName": "Milkdown Markdown Editor",
        "selector": [
          {
            "filenamePattern": "*.md"
          },
          {
            "filenamePattern": "*.markdown"
          }
        ],
        "priority": "default"
      }
    ],
    "configurationDefaults": {
      "workbench.editorAssociations": {
        "{git,gitlens}:/**/*.md": "default",
        "{git,gitlens}:/**/*.markdown": "default"
      }
    }
  },
  "scripts": {
    "build": "node esbuild.config.js",
    "build:dev": "node esbuild.config.js --dev",
    "watch": "node esbuild.config.js --watch",
    "lint": "tsc --noEmit",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.10",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.20.0",
    "sharp": "^0.34.5",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@milkdown/crepe": "^7.18.0",
    "js-yaml": "^4.1.1"
  }
}
